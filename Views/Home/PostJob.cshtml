
@{
    ViewBag.Title = "PostJob";
}

<div style="margin-left:200px;margin-top:50px">
    <h1 style="align-self:center">Post a Job</h1>

    <div class="row" style="margin-top:70px">
        <div class="input-lg">
            <label class="col-md-3"> Job Title</label>
            
        
            <input type="text" class="col-md-8 " style="border-radius:5px" />
        </div>
    </div>
    

    <div class="row" style="margin-top:30px">
        <div class="input-lg">
            <label class="col-md-3"> Job Duration</label>

            <input type="text" class="col-md-1" style="border-radius:5px" />
            <label class="col-md-1">To</label>
            <input type="text" class="col-md-1" style="border-radius:5px" />
        </div>
    </div>
    <div class="row" style="margin-top:30px">
        <div class="input-lg">
            <label class="col-md-3"> Job Location</label>

            <input type="text" class="col-md-8" style="border-radius:5px" />
        </div>
    </div>
    <div class="row" style="margin-top:30px">
        <div class="input-lg">
            <label class="col-md-3"> Salary Range</label>

            <input type="text" class="col-md-8" style="border-radius:5px" />
        </div>
    </div>
    <div class="row" style="margin-top:30px">
        <div class="input-lg">
            <label class="col-md-3"> Job Description</label>

            <textarea class="col-md-8" rows="5" cols="50" style="border-radius:5px" ></textarea>
       </div>
    </div>

    <div class="row">
        <div class="input-lg " style="margin-top:20px">

            <div class="dropdown">
                <button class="btn btn-primary dropdown-toggle" type="button" data-toggle="dropdown" style="margin-left:330px">
                    Select Required Professional
                    <span class="caret"></span>
                </button>
                <ul class="dropdown-menu " style="margin-left:350px">
                    <li><a href="#">Plumber</a></li>
                    <li><a href="#">Tailor</a></li>
                    <li><a href="#">Mechanic</a></li>
                    <li><a href="#">Electrition</a></li>
                    <li><a href="#">Carpenter</a></li>
                    <li><a href="#">Teacher</a></li>
                </ul>
            </div>

        </div>
    </div>
    <div>
        <a class="btn btn-primary col-md-offset-4 " style="margin-top:20px">Submit Job</a>
    </div>
</div>