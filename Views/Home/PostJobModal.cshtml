
@{
    Layout = null;
}

<div class="modal fade" id="edit-modal" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" align="center">
                    <img class="img-circle" src="~/Images/0.jpg" style="max-height:100px;max-width:100px">
                </div>

            <!-- Begin # DIV Form -->
            <div id="div-forms">
                <!-- Begin # Login Form -->
                <form id="login-form">
                    <div class="modal-body">
                        Name: <input class="form-control" type="text" placeholder="Gloves">
                        Major Category<input class="form-control" type="password" placeholder="Cricket">
                        Minor Category<input class="form-control" type="password" placeholder="Gloves">
                        Price <input class="form-control" type="password" placeholder="2000">
                    </div>
                    <div class="modal-footer">
                        <div>
                            <button type="submit" class="btn btn-primary btn-lg btn-block">Save</button>
                        </div>
                    </div>
                </form>

            </div>
            <!-- End # DIV Form -->

        </div>
    </div>
</div>
<!-- END # MODAL LOGIN -->

